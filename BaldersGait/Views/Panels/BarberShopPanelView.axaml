<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BaldersGait.ViewModels.Panels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BaldersGait.Views.Panels.BarberShopPanelView"
             x:DataType="vm:BarberShopPanelViewModel">
    <Design.DataContext>
        <vm:BarberShopPanelViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="150,3,*" ColumnDefinitions="*">
        <ContentControl Grid.Row="0" Content="{Binding TopView}" />
        <Line Grid.Row="1" />
        <ContentControl Grid.Row="2" Content="{Binding BottomView}" />
    </Grid>
</UserControl>